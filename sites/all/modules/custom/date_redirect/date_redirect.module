/**
 * Implementation of hook_menu().
 */
function date_redirect_menu() {
  $items = array();

  $items['date-print'] = array(
    'title' => 'Print',
    'description' => 'Date popup redirect',
    'page callback' => 'date_redirect_print',
    'access arguments' => array('schedule print page'),
    'menu_name' => 'main-menu',
  );

  return $items;
}

/**
 * Implementation of hook_library_alter()
 */
function date_redirect_library_alter(&$libraries, $module) {
  $libraries['ui.datepicker']['version'] = '2.0';
  $libraries['ui.datepicker']['js'] = array(drupal_get_path('module', 'date_redirect') . '/js/jquery.ui.datepicker.js' => array()); 
  $libraries['ui.datepicker']['css'] = array(drupal_get_path('module', 'date_redirect') . '/css/jquery.ui.datepicker.css' => array()); 
}

/*
 * Implementation of hook_init().
 * 
 * Only include js file where necessary, and pass the base url to it.
 */

function date_redirect_init() {
  if (user_access('schedule print page')) {
    global $base_url;
    global $base_path;
    drupal_add_library('system', 'ui.datepicker');
    drupal_add_library('system', 'ui.position');
    drupal_add_js(array('date_redirect' => array('base_url' => $base_url)), 'setting');
    drupal_add_js($base_path . drupal_get_path('module', 'date_redirect') . '/js/script.js', 'external'); 
  }
}


